<!--index.wxml-->
<block wx:if="{{showUserInfo}}">
  <block wx:if="{{!hasUserInfo && canIUse}}">
    <view class='content'>
      <view>自动签到需要申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>
    <w-button class="authButton" bgColor="#99ddcc" color="#ffffff" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
    授权登陆
    </w-button>
  </block>
  <block wx:else>
    <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="loadingIndicator">
      <w-indicator show color="#99ddcc" size="larger" type="ball" />
    </view>
  </block>
</block>
